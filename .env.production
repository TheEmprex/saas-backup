# Sanitized production template. Replace with real values via your secret manager.
APP_NAME="OnlyVerified"
APP_ENV=production
APP_KEY=base64:CHANGEME_GENERATE_NEW_KEY
APP_DEBUG=false
APP_URL=https://onlyverified.io

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=saas_app
DB_USERNAME=saasuser
DB_PASSWORD=CHANGEME

BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
