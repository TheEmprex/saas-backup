# Sanitized production template. Replace with real values via your secret manager.
APP_NAME="OnlyVerified"
APP_ENV=production
APP_KEY=base64:CHANGEME_GENERATE_NEW_KEY
APP_DEBUG=false
APP_URL=https://onlyverified.io

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=saas_app
DB_USERNAME=saasuser
DB_PASSWORD=CHANGEME

BROADCAST_DRIVER=pusher
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_DOMAIN=.onlyverified.io
SESSION_SECURE_COOKIE=true
SANCTUM_STATEFUL_DOMAINS=onlyverified.io, www.onlyverified.io
CORS_ALLOWED_ORIGINS=https://onlyverified.io,https://www.onlyverified.io

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Reverb / Pusher-compatible WebSocket settings for production (self-hosted)
REVERB_APP_ID=CHANGEME_REVERB_APP_ID
REVERB_APP_KEY=CHANGEME_REVERB_APP_KEY
REVERB_APP_SECRET=CHANGEME_REVERB_APP_SECRET
REVERB_HOST=onlyverified.io
REVERB_PORT=443
REVERB_SCHEME=https

# Map Pusher client to Reverb in production
PUSHER_APP_ID=${REVERB_APP_ID}
PUSHER_APP_KEY=${REVERB_APP_KEY}
PUSHER_APP_SECRET=${REVERB_APP_SECRET}
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=${REVERB_HOST}
PUSHER_PORT=${REVERB_PORT}
PUSHER_SCHEME=${REVERB_SCHEME}

# Vite client env for Echo
VITE_REVERB_APP_KEY=${REVERB_APP_KEY}
VITE_REVERB_HOST=${REVERB_HOST}
VITE_REVERB_PORT=${REVERB_PORT}
VITE_REVERB_SCHEME=${REVERB_SCHEME}

VITE_PUSHER_APP_KEY=${REVERB_APP_KEY}
VITE_PUSHER_APP_CLUSTER=mt1
VITE_PUSHER_FORCE_TLS=true
VITE_PUSHER_HOST=${REVERB_HOST}
VITE_PUSHER_PORT=${REVERB_PORT}

# Production Mail Settings
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your_mailgun_username
MAIL_PASSWORD=your_mailgun_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@onlyverified.io"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 for File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_s3_bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

# Real Stripe Keys
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGEME
STRIPE_SECRET_KEY=sk_live_CHANGEME
STRIPE_WEBHOOK_SECRET=whsec_CHANGEME

# Production Paddle Keys (if using Paddle)
PADDLE_VENDOR_ID=your_vendor_id
PADDLE_API_KEY=your_paddle_api_key
PADDLE_ENV=production
PADDLE_PUBLIC_KEY=your_paddle_public_key
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret

# Google Analytics
ANALYTICS_PROPERTY_ID=your_ga_property_id

JWT_SECRET=CHANGEME
WAVE_DEMO=false
