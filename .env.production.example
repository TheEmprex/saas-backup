APP_NAME=OnlyVerified
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://app.example.com
ASSET_URL=

LOG_CHANNEL=stack
LOG_LEVEL=info

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=onlyverified
DB_USERNAME=onlyverified
DB_PASSWORD=

# Cache / Queue / Session
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_DOMAIN=.example.com

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@example.com
MAIL_FROM_NAME="OnlyVerified"

# Broadcasting via Reverb (Pusher-compatible)
BROADCAST_DRIVER=pusher

# Reverb server (local, proxied by Nginx on ws.example.com)
REVERB_SERVER_HOST=127.0.0.1
REVERB_SERVER_PORT=8080
REVERB_HOST=ws.example.com
REVERB_PORT=443
REVERB_SCHEME=https
REVERB_ALLOWED_ORIGINS=https://app.example.com
REVERB_APP_ID=onlyverified
REVERB_APP_KEY=
REVERB_APP_SECRET=

# Map Pusher envs for server-side
PUSHER_APP_ID=${REVERB_APP_ID}
PUSHER_APP_KEY=${REVERB_APP_KEY}
PUSHER_APP_SECRET=${REVERB_APP_SECRET}
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=${REVERB_HOST}
PUSHER_PORT=${REVERB_PORT}
PUSHER_SCHEME=${REVERB_SCHEME}

# Frontend Echo (Vite)
VITE_PUSHER_APP_KEY=${PUSHER_APP_KEY}
VITE_PUSHER_APP_CLUSTER=${PUSHER_APP_CLUSTER}
VITE_PUSHER_HOST=${PUSHER_HOST}
VITE_PUSHER_PORT=${PUSHER_PORT}
VITE_PUSHER_FORCE_TLS=true

# CORS allowed origins (comma separated)
CORS_ALLOWED_ORIGINS=https://app.example.com

# Horizon access (comma separated emails)
HORIZON_ADMINS=

# Stripe (example)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

